<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="#f6f6f6" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <include layout="@layout/toolbar_product_list"/>
        <LinearLayout android:orientation="vertical" android:background="@drawable/white_light_rect" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8.5dp" android:layout_marginTop="8.8dp" android:layout_marginRight="8.5dp" android:layout_marginBottom="8dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="137dp">
                <ImageView android:layout_gravity="center" android:id="@+id/image" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:src="@drawable/s9plus"/>
                <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="13.3sp" android:textColor="@color/txt_color" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Samsung Galaxy S9 Plus" android:fontFamily="@font/roboto_medium"/>
                    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                        <TextView android:textSize="13.3sp" android:textColor="@color/red" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rs 30000" android:fontFamily="@font/roboto_medium"/>
                        <TextView android:textSize="12sp" android:textColor="#a2a2a2" android:gravity="center" android:layout_gravity="center" android:id="@+id/offer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/offer1" android:fontFamily="@font/roboto_medium"/>
                        <TextView android:textSize="11.3sp" android:textColor="@color/white" android:background="@drawable/offer_red_rect" android:paddingLeft="4dp" android:paddingTop="2dp" android:paddingRight="4dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="-35%" android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/linear_count" android:background="@drawable/size_red_rect" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                        <FrameLayout android:layout_gravity="center" android:background="#f2f2f2" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_margin="1dp">
                            <ImageView android:layout_gravity="center" android:id="@+id/minus" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="17dp" android:layout_height="match_parent" android:src="@drawable/ic_minus"/>
                        </FrameLayout>
                        <TextView android:textColor="@color/red" android:layout_gravity="center" android:id="@+id/number" android:paddingLeft="8.7dp" android:paddingTop="4dp" android:paddingRight="8.7dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1" android:fontFamily="@font/roboto_regular"/>
                        <FrameLayout android:background="#f2f2f2" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_margin="1dp">
                            <ImageView android:layout_gravity="center" android:id="@+id/plus" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="17dp" android:layout_height="match_parent" android:src="@drawable/ic_plus"/>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
                <ImageView android:layout_gravity="bottom" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp" android:src="@drawable/ic_delete"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@drawable/white_light_rect" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8.5dp" android:layout_marginRight="8.5dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="20dp" android:layout_marginRight="10dp">
                <TextView android:textSize="12.7sp" android:textColor="#a2a2a2" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Sub Total" android:layout_weight="1" android:fontFamily="@font/roboto_regular"/>
                <TextView android:textSize="12.7sp" android:textColor="@color/txt_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rs 30000" android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>
            <View android:background="#f2f2f2" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="8.5dp" android:layout_marginTop="10dp" android:layout_marginRight="8.5dp"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp">
                <TextView android:textSize="12.7sp" android:textColor="#a2a2a2" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Shipping Charge" android:layout_weight="1" android:fontFamily="@font/roboto_regular"/>
                <TextView android:textSize="12.7sp" android:textColor="#32cd32" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Free" android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>
            <View android:background="#f2f2f2" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="8.5dp" android:layout_marginTop="10dp" android:layout_marginRight="8.5dp"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp">
                <TextView android:textSize="12.7sp" android:textColor="#a2a2a2" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Coupan Discount" android:layout_weight="1" android:fontFamily="@font/roboto_regular"/>
                <TextView android:textSize="12.7sp" android:textColor="#32cd32" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Apply Coupan" android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>
            <View android:background="#f2f2f2" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="8.5dp" android:layout_marginTop="10dp" android:layout_marginRight="8.5dp"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="20dp">
                <TextView android:textSize="12.7sp" android:textColor="#a2a2a2" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Total" android:layout_weight="1" android:fontFamily="@font/roboto_regular"/>
                <TextView android:textSize="12.7sp" android:textColor="@color/txt_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rs 30,000" android:fontFamily="@font/roboto_bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView android:textSize="15sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/text_checkout" android:background="@color/red" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Checkout" android:layout_alignParentBottom="true" android:fontFamily="@font/roboto_medium"/>
</RelativeLayout>
