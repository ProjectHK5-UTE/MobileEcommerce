<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/toolbar_product_list"/>
    <androidx.core.widget.NestedScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.viewpager.widget.ViewPager android:layout_gravity="center" android:id="@+id/viewPager" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="250dp"/>
                <me.relex.circleindicator.CircleIndicator android:layout_gravity="bottom" android:id="@+id/indicator" android:layout_width="match_parent" android:layout_height="48dp" android:layout_alignParentBottom="true" app:ci_drawable="@drawable/ic_circular_selected" app:ci_drawable_unselected="@drawable/ic_circular_unselected" app:ci_height="5dp" app:ci_width="5dp" />
            </FrameLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp">
                <TextView android:textColor="@color/txt_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rs. 1450" android:fontFamily="@font/roboto_medium"/>
                <TextView android:textSize="12sp" android:textColor="#7c7b7b" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/rs_2500"/>
                <TextView android:textSize="11.3sp" android:textColor="@color/white" android:background="@drawable/offer_red_rect" android:paddingLeft="4dp" android:paddingTop="2dp" android:paddingRight="4dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="-35%" android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textColor="#8f909e" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:text="Lorem Ipsum is simply dummy text of the prnting and typesetting industry.Lorem Ipsum is simply dummy text of the prnting and typesetting industry.Lorem Ipsum is simply dummy text of the prnting and typesetting industry." android:lineSpacingExtra="3dp" android:fontFamily="@font/roboto_regular"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="15dp">
                <Button android:textSize="13sp" android:textColor="@color/white" android:id="@+id/btn_addtocart" android:background="@drawable/btn_red_rect" android:paddingLeft="15sp" android:paddingRight="15sp" android:layout_width="wrap_content" android:layout_height="36dp" android:layout_marginLeft="5dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="Add To Cart"  android:gravity="center_vertical|center_horizontal" android:textAllCaps="false" android:fontFamily="@font/roboto_regular"/>
                <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/white_home_rect" android:layout_width="45dp" android:layout_height="35dp" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp">
                    <ImageView android:layout_gravity="center" android:layout_width="18dp" android:layout_height="18dp" android:src="@drawable/ic_heart_light"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="5sp" android:layout_marginRight="15dp">
                <TextView android:textSize="15sp" android:textColor="@color/txt_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Size" android:fontFamily="@font/roboto_medium"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
                    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/linear1" android:background="@drawable/size_rect" android:layout_width="35dp" android:layout_height="wrap_content">
                        <TextView android:textSize="12.7sp" android:textColor="#8f909e" android:gravity="center" android:id="@+id/text1" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="XS" android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/linear2" android:background="@drawable/size_rect" android:layout_width="35dp" android:layout_height="wrap_content" android:layout_marginLeft="15dp">
                        <TextView android:textSize="12.7sp" android:textColor="#8f909e" android:gravity="center" android:id="@+id/text2" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="S" android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/linear3" android:background="@drawable/size_rect" android:layout_width="35dp" android:layout_height="wrap_content" android:layout_marginLeft="15dp">
                        <TextView android:textSize="12.7sp" android:textColor="#8f909e" android:gravity="center" android:id="@+id/text3" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="M" android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/linear4" android:background="@drawable/size_rect" android:layout_width="35dp" android:layout_height="wrap_content" android:layout_marginLeft="15dp">
                        <TextView android:textSize="12.7sp" android:textColor="#8f909e" android:gravity="center" android:id="@+id/text4" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="L" android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/linear5" android:background="@drawable/size_rect" android:layout_width="35dp" android:layout_height="wrap_content" android:layout_marginLeft="15dp">
                        <TextView android:textSize="12.7sp" android:textColor="#8f909e" android:id="@+id/text5" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="XL" android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/linear6" android:background="@drawable/size_rect" android:layout_width="35dp" android:layout_height="wrap_content" android:layout_marginLeft="15dp">
                        <TextView android:textSize="12.7sp" android:textColor="#8f909e" android:gravity="center" android:id="@+id/text6" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="XXL" android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="15sp" android:layout_marginRight="15dp">
                <TextView android:textSize="15sp" android:textColor="@color/txt_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Colors" android:fontFamily="@font/roboto_medium"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
                    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <LinearLayout android:orientation="horizontal" android:id="@+id/linear_red" android:background="@drawable/red_circle" android:layout_width="30dp" android:layout_height="30dp"/>
                        <ImageView android:layout_gravity="center" android:id="@+id/red_tick" android:visibility="gone" android:layout_width="13dp" android:layout_height="13dp" android:src="@drawable/ic_tick"/>
                    </FrameLayout>
                    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp">
                        <LinearLayout android:orientation="horizontal" android:id="@+id/linear_green" android:background="@drawable/green_circle" android:layout_width="30dp" android:layout_height="30dp"/>
                        <ImageView android:layout_gravity="center" android:id="@+id/green_tick" android:visibility="gone" android:layout_width="13dp" android:layout_height="13dp" android:src="@drawable/ic_tick"/>
                    </FrameLayout>
                    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp">
                        <LinearLayout android:orientation="horizontal" android:id="@+id/linear_black" android:background="@drawable/black_circle" android:layout_width="30dp" android:layout_height="30dp"/>
                        <ImageView android:layout_gravity="center" android:id="@+id/black_tick" android:visibility="gone" android:layout_width="13dp" android:layout_height="13dp" android:src="@drawable/ic_tick"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="15sp" android:layout_marginRight="15dp">
                <TextView android:textSize="15sp" android:textColor="@color/txt_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Reviews" android:fontFamily="@font/roboto_medium"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerview" android:paddingTop="15dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
